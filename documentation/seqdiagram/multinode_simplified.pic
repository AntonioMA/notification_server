.PS
copy "sequence.pic"

#boxwid = 1
#movewid = 2.7

# Object definition
object(A,"app")
object(N,"node")
object(S1,"notif1")
object(S2,"notif2")
object(W,"server")
step

# Bootstrap - register node IP adress
step

# Registration on Notification Server
active(N)
message(N,S1,"register_node")
active(S1)
message(S1,S2,"register_node")
active(S2)
return_message(S2,S1,"REGISTERED")
inactive(S2)
return_message(S1,N,"REGISTERED")
inactive(S1)
step
inactive(N)

# app registration
active(A)
message(A,N,"requestRemotePermission()")
active(N)
message(N,S1,"register_app")
active(S1)
message(S1,S2,"register_app")
active(S2)
return_message(S2,S1,"url=URL")
inactive(S2)
return_message(S1,N,"url=URL")
inactive(S1)
return_message(N,A,"OK: publicURL")
inactive(N)
message(A,W,"AJAX: register(publicURL, publicKey)")
active(W)
return_message(W,A,"200 OK")
inactive(W)
step
inactive(A)

# push notification
active(W)
message(W,S1,"origin,data")
active(S1)
message(S1,W,"verify origin")
active(W)
return_message(W,S1,"OK")
inactive(W)
message(S1,S2,"origin,data")
active(S2)
message(S2,S1,"verify origin")
active(S1)
return_message(S1,S2,"OK")
inactive(S1)
message(S2,N,"data")
active(N)
message(N,A,"event(data)")
active(A)
return_message(A,N,"OK")
inactive(A)
return_message(N,S2,"OK")
inactive(N)
return_message(S2,S1,"OK")
inactive(S2)
return_message(S1,W,"OK")
inactive(S1)
inactive(W)

# End diagram
step
complete(A)
complete(N)
complete(S1)
complete(S2)
complete(W)

